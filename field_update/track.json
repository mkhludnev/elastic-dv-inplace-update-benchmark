{
	"version": 2,
	"description": "Field update benchmark",
	"challenges": [
        {
            "name": "field-update-then-index",
            "default":true,
            "schedule": [
                {
                    "operation": {
                        "operation-type": "delete-index",
                        "index":["books","subscriptions"]
                    }
                },
                {
                    "operation": {
                        "operation-type": "create-index",
                          "index": "books",
                          "request-params": {
                              "include_type_name": "true"
                          },
                          "body": {
                            "settings": {
                              "number_of_shards": 100,
                              "number_of_replicas": 0,
                              "index.mapping.total_fields.limit": 100000,
                              "index.max_terms_count":1000000,   
                              "index.refresh_interval":"600s"                       
                            },
                            "mappings": {
                                "books": {
                                  "numeric_detection": true,
                                  "date_detection": false,
                                  "properties": {
                                    "title": {
                                      "type": "text"
                                    },
                                    "abstract": {
                                      "type": "text"
                                    },
                                    "author": {
                                      "type": "text"
                                    },
                                    "pubDate": {
                                      "type": "text"
                                    },
                                    "subscriptions": {
                                      "type":"keyword"
                                    },
                                    "updated": {
                                      "type": "boolean"
                                    }
                                  },
                                  "_source": {"enabled":false},
                                 "dynamic_templates": [
                                    {
                                      "subscr_columns": {
                                        "match": "subscription_*",
                                        "mapping": {
                                          "type": "integer",
                                          "index": false,
                                          "store": false,
                                          "doc_values": true
                                        }
                                      }
                                    } 
                                 ]
                                }
                              }
                          }
                    }
                },
                 {
                        "operation": {
                            "operation-type": "create-index",
                            "name":"make subs",
                              "index": "subscriptions",
                              "request-params": {
                                 "include_type_name": "true"
                              },
                              "body": {
                                 "settings": {
                                  "number_of_shards": 1,
                                  "number_of_replicas": 0
                                },
                                "mappings": {
                                   "subscriptions": {
                                     "numeric_detection": true,
                                     "date_detection": false,
                                     "dynamic": "strict",
                                     "properties": {
                                       "books": {
                                         "type": "keyword",
                                         "index": false
                                       },
                                       "updated": {
                                         "type": "boolean"
                                       }
                                     }
                                   }
                                 }
                              }
                        }
                    },
                {
                    "operation": {
                        "name": "insert books",
                        "operation-type": "bulk",
                        {% set divisor=1 %}
                        {% set docs=100000000/divisor %}
                        {% set insert_bulk_size=500%}
                        {% set subs=2000/divisor %}
                        {% set subs_per_book=5 %}
                        "bulk-size":{{insert_bulk_size}},
                        "param-source": "insert-books-subs-parallel",
                        "subs-total":{{subs}},
                        "subs-per-book":{{subs_per_book}},
                        "books-total": {{docs}}   
                    },
                    "clients": 1
                },
                {
                    "operation": {
                        "name": "insert subs",
                        "operation-type": "bulk",
                        "bulk-size":1,
                        "param-source": "insert-subs-only",
                        "subs-total":{{subs}},
                        "books-per-sub":{{(docs*subs_per_book/subs)|int}},
                        "books-total": {{docs}}
                    },
                    "clients": 1
                },
                {
                  "operation": {
                      "operation-type":"force-merge",
                     "max-num-segments":5
                  }
                },
                 {% set subs_searching=5 %}
                
                {
                    "parallel": {
                        "completed-by":"update dv in-place",
                        "tasks": [
                            {
                                "operation": {
                                    "name": "filter by DV",
                                    "operation-type": "search",
                                    "param-source": "search-subsDV-filter",
                                    "subs-total":{{subs_searching}}
                                },
                                "clients": 1,
                                "target-throughput": 1
                            },
                            {
                                "operation": {
                                    "name": "update dv in-place",
                                    "operation-type": "bulk",
                                    "bulk-size":10000,
                                    "param-source": "DV-update-subs-in-books",
                                    {#reducing updates twice#}
                                    "subs-total":{{subs/2}},
                                    "subs-per-book":{{subs_per_book}},
                                    "books-total": {{docs}},
                                    "detailed-results": true    
                                },
                                "clients": 1
                            }
                        ]
                    }
                },
                
                
                
                
                 {
                    "operation": {
                         "name": "warming filter by term lookup",
                                    "operation-type": "search",
                                    "param-source": "search-terms-lookup",
                                    "subs-total":{{subs_searching}}
                    },
                    "iterations":30
                },
                {
                    "parallel": {
                        "completed-by":"update term lookup",
                        "tasks": [
                            {
                                "operation": {
                                    "name": "filter by term lookup",
                                    "operation-type": "search",
                                    "param-source": "search-terms-lookup",
                                    "subs-total":{{subs_searching}}
                                },
                                "clients": 1,
                                "target-throughput": 1
                            },
                            {
                                "operation": {
                                    "name": "update term lookup",
                                    "operation-type": "bulk",
                                    "bulk-size":1,
                                    "param-source": "insert-subs-only",
                                    {#reducing updates twice#}
                                    "subs-total":{{subs/2}},
                                    "books-per-sub":{{(docs*subs_per_book/subs)|int}},
                                    "books-total": {{docs}},
                                    "detailed-results": true    
                                },
                                "clients": 1
                            }
                        ]
                    }
                },
                {
                    "parallel": {
                        "completed-by":"update field",
                        "tasks": [
                            {
                                "operation": {
                                    "name": "filter by field",
                                    "operation-type": "search",
                                    "param-source": "search-subs-filter",
                                    "subs-total":{{subs_searching}}
                                },
                                "clients": 1,
                                "target-throughput": 1
                            },
                            {
                                "operation": {
                                    "name": "update field",
                                    "operation-type": "bulk",
                                    "bulk-size":{{insert_bulk_size}},
                                    "param-source": "update-subs-in-books",
                                    "subs-total":{{subs}},
                                    "subs-per-book":{{subs_per_book}},
                                    "books-total": {{docs}} 
                                },
                                "clients": 1, {# 2 gives 165 docs/sec; 1 - 562 docs/sec. dunno why#}
                                {#reducing updates 50 times#}
                                "iterations": {{(docs/insert_bulk_size/50)|int}}
                            }

                        ]
                    }
                }
            ]
        }
    ]
}

